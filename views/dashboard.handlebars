<section>
    <h1>Create A Post</h1>

    <form class="new-post-form">
        <div class="form">
            <label for="post-title">Title</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-body">Post</label>
            <input id="post-body" name="post-body" /> 
        </div>
        <button type="submit" class="btn">Submit New Post</button>
    </form>
</section>

{{#if posts.length}}
<section id="posts-section">
    <h2>Posts</h2>
    {{#each posts as |post|}}
    {{> post-info post}}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit</a>
            </div>
        </div>
    </div>
    {{> user-comments post.comments}}
    {{/each}}
</section>
{{/if}}

<script src="/js/add-post.js"></script>