<article>
  <a href="/dashboard"> &larr; Dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post">
    <div>
      <h4>Title</h4>
      <input id="post-title" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <h4>Post</h4>
      <input id="post-body" name="post-body" type="text" value="{{post.post_content}}" />
    </div>
    <div>
      by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <div>
    <button class ="btn" type="submit">Save Edits</button>
    <button type="button" id="delete-post-btn" class="delete-post-btn btn">Delete</button>
    </div>
  </form>
</article>

<form class="comment-form">
  <div>
    <textarea cols="50" rows="8" name="comment-body"></textarea>
  </div>

  <div>
    <button class ="btn" type="submit">Add comment</button>
  </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>