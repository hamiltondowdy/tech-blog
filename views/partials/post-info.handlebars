<main class="container-xxl">
    <div class="row">
        <div class="col post">
            <div class="col post-header">
                <div id="post-header" class="post-header">
                    <div id="post-header-title" class="post-header"><a href="/post/{{id}}">{{title}}</a></div>
                    <div id="post-header-date" class="post-header">Posted by {{user.username}} on {{format_date created_at}}</div>
                </div>
                <div class="col post-body">
                    {{post_content}}
                </div>
            </div>
        </div>
    </div>
</main>