<div class="container comments">

    {{#each this}}
    <div class="row">
        <section class="col comment">
            <div class="meta">
            {{user.username}} on {{format_date created_at}}
            </div>
            <div class="text">
            
            {{comment_text}}
            </div>
        </section>
    </div>
    <a href="/dashboard/edit-comment/{{id}}" class="edit-link">Edit Comment</a>
    {{/each}}

</div>